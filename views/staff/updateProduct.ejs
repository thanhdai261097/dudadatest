<center><h3 >Quản lý thông tin chi tiết sản phẩm</h3></center>
<div class="space"> </div>
<center>
  <span id="update">
          <form method="POST" action="adminUpdateProduct">
            <center>
              <input type="text" id="id" name="ID" value="<%= updateProduct.ID%>"  style="width:60%" readonly = "on"/>
              <input type="text" id="type" name="type" value="<%= updateProduct.type%>" style="width:60%" readonly = "on"/>
              <input type="text" id="name" name="name" value="<%= updateProduct.name%>" style="width:60%" required pattern="[A-Za-z0-9\s]{5,}" title="Không chứa kí tự đặc biệt, nhiều hơn 5 kí tự" />
              <input type="text" id="info" name="info" value="<%= updateProduct.info%>" style="width:60%" required pattern="[A-Za-z0-9\s]{1,50}" title="Không chứa kí tự đặc biệt" />
              <input type="text" id="price" name="price" value="<%= updateProduct.price%>" style="width:60%"  required pattern="[0-9]" title="Chỉ có kí tự số" />
              <input type="text" id="link" name="link" value="<%= updateProduct.link%>" style="width:60%" required/>

              <br>
              <button type="submit" class="button btn-primary" style="width:30%"><i class="fa fa-edit"> </i> </button>

            </center>
          </form>
            <a href = "removeProduct?ID=<%=updateProduct.ID%>">
              <button class = "button btn-primary" style = "width:7%; float:right; margin-top:-470px; background-color:red" ><i class = "fa fa-times"></i> </button>
            </a>
        </span>
</center>
